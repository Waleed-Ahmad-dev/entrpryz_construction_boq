<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_construction_boq_revision_wizard_form" model="ir.ui.view">
        <field name="name">construction.boq.revision.wizard.form</field>
        <field name="model">construction.boq.revision.wizard</field>
        <field name="arch" type="xml">
            <form string="Revise BOQ">
                <group>
                    <field name="boq_id" invisible="1"/>
                    <div class="alert alert-info" role="alert">
                        This action will <b>Lock</b> the current BOQ and create a new <b>Draft</b> version (Version +1).
                        <br/>Please provide a reason for the audit trail.
                    </div>
                    <field name="revision_reason" placeholder="e.g., Client requested additional scope for..." style="height: 100px;"/>
                </group>
                <footer>
                    <button name="action_create_revision" string="Create Revision" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>